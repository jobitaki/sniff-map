# Environment variables for Sniff Pittsburgh backend
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/sniff_pittsburgh
# Example for production: postgresql://user:pass@hostname:port/database

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development

# API Configuration
API_KEY=your-api-key-for-lorawan-server

# Database Credentials (alternative to DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sniff_pittsburgh
DB_USER=username
DB_PASSWORD=password